

# Install express.
sudo npm install express-generator -g

# Install nodemon
npm install -g nodemon

# Install yoeman
sudo npm install yo -g

# Install the coder camps single page app yoeman scaffolding.
sudo npm install -g generator-codercamps-spa

# NOTE: Copy over the template file that is in Uppercase to a lowercase version.
sudo cp /usr/lib/node_modules/generator-codercamps-spa/generators/app/templates/public/templates/Home.html /usr/lib/node_modules/generator-codercamps-spa/generators/app/templates/public/templates/home.html

# Install the coder camps js yoeman scaffolding.
npm install -g generator-codercamps-js



